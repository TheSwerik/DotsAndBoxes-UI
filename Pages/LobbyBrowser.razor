@page "/lobbyBrowser"
@inject UserService UserService

<div class="w-100 text-center">
    <h1>Lobby-Browser</h1>
</div>
<hr>
<div class="d-flex w-100 justify-content-center">
    <div class="d-flex list-group mx-2 w-50">
        @for (var x = 1; x < 6; x++)
        {
            <div class="list-group-item mt-2">
                <div class="row">
                    <div class="col">Lobby @x</div>
                    <div class="col-3 border-left border-secondary">0/10 Players</div>
                </div>
            </div>
        }
    </div>
</div>
<div class="d-flex w-100 justify-content-center mt-5">
    <button class="btn w-25 btn-primary">Create Lobby</button>
</div>
