@page "/login"
@page "/"

<div class="container">
    <div class="center">
        <div class="card card-block mx-auto p-4 align-items-center">
            <EditForm Model="@_authenticateModel" OnValidSubmit="OpenServerBrowser">
                <DataAnnotationsValidator/>
                <ValidationSummary/>
                <table class="form-group">
                    <tr>
                        <td>Username:</td>
                        <td>
                            <InputText id="name" class="form-control" @bind-Value="_authenticateModel.Username"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Password:
                        </td>
                        <td>
                            <InputText type="password" id="password" class="form-control" @bind-Value="_authenticateModel.Password"/>
                        </td>
                    </tr>
                </table>
                <button type="submit" class="form-control btn-primary">Login</button>
            </EditForm>
        </div>
    </div>
</div>