@page "/login"
@page "/"
@inject NavigationManager NavigationManager
@inject HttpClient Http

<div class="container">
    <div class="center">
        <div class="card card-block mx-auto p-4 align-items-center" style="width: 25vw; height: 15vh">
            <table>
                <tr>
                    <td style="font-size: 2vh; width: 6vw">
                        Username:
                    </td>
                    <td style="font-size: 2vh; width: 16.2vw">
                        <input class="form-control w-100" @bind="@_userName" @onkeyup="CheckEnter"/>
                    </td>
                </tr>
            </table>
            <button class="btn btn-primary w-100 my-auto" @onclick="OpenServerBrowser">Play</button>
        </div>
    </div>
</div>