<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item @(IsHighscore() ? "active" : "")">
                <a class="nav-link" href="highscore">Highscore</a>
            </li>
            <li class="nav-item @(IsLobby() ? "active" : "")">
                @if (UserService.CurrentUser != null)
                {
                    <a class="nav-link" href="lobbybrowser">Lobbybrowser</a>
                }
            </li>
            <li class="nav-item @(false ? "active" : "")">
                @if (UserService.CurrentUser != null)
                {
                    <a class="nav-link" href="user/@UserService.CurrentUser.Id">@UserService.CurrentUser.Username</a>
                }
            </li>
            @if (UserService.CurrentUser != null)
            {
                <a class="nav-link" href="logout">Logout</a>
            }
            else
            {
                @if (IsLogin())
                {
                    <li class="nav-item">
                        <a class="nav-link" @onclick="() => NavigateTo(RegisterUri)">Register</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" @onclick="() => NavigateTo(LoginUri)">Login</a>
                    </li>
                }
            }
        </ul>
    </div>
</nav>