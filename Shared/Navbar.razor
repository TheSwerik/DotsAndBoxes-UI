<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item @(IsHighscore() ? "active" : "")">
                        <a class="nav-link" href="highscore">Highscore</a>
                    </li>
                    <li class="nav-item @(IsLobby() ? "active" : "")">
                        <a class="nav-link" href="lobbybrowser">Lobbybrowser</a>

                    </li>
                    <li class="nav-item @(false ? "active" : "")">
                        <a class="nav-link" href="user/@context.User.FindFirst(ClaimTypes.Name).Value">@context.User.FindFirst(ClaimTypes.Name).Value</a>
                    </li>
                    <a class="nav-link" href="logout">Logout</a>
                </Authorized>
                <NotAuthorized>

                    @if (IsLogin())
                    {
                        <li class="nav-item">
                            <a class="nav-link" @onclick="() => NavigateTo(RegisterUri)" href="register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" @onclick="() => NavigateTo(LoginUri)" href="login">Login</a>
                        </li>
                    }
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</nav>